{ 
  "fmt": {
    "include": ["src/"],
    "singleQuote": true,
    "lineWidth": 120,
    "indentWidth": 4
  },
  "tasks": {
    "dev": "deno run --allow-net --allow-read --allow-env --allow-sys=osRelease --watch src/main.ts",
    "startProd": "deno run --allow-net --allow-read --allow-env --allow-sys=osRelease src/main.ts"
  },
  "imports": {
    "hono": "https://deno.land/x/hono@v3.4.2/mod.ts",
    "honoMiddleware": "https://deno.land/x/hono@v3.4.2/middleware.ts",
    "mongodb": "npm:mongodb",
    "@turf/turf": "npm:@turf/turf"
  }
}
